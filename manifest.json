{
	"manifest_version": 2,
	"name": "The GFW Experience",
	"description": "Just Another Internet Experience",
	"version": "1.0",
	"author": "zzyw studio",


	"browser_action": {
		"default_icon": "icon_37.png",
		"default_popup": "popup.html"
	},

	"background":
    {
	    "persistent":true,
        "scripts": ["lib/jquery.min.js","blocker.js"]
	    
    },
	
	"content_scripts": [
		{
			"matches":  [
	    "*://*.nytimes.com/*",
	    "*://*.facebook.com/*",
	    "*://*.bloomberg.com/*",
	    "*://*.aljazeera.com/*",
	     "*://*.tumblr.com/*",
	     "*://*.twitter.com/*",
	     "*://mail.google.com/*",
	     "*://*.youtube.com/*",
	     "*://*.t.co/*",
	     "*://*.google.co.jp/*",
	     "*://*.flickr.com/*",
	     "*://*.vimeo.com/*",
	     "*://*.cbc.ca/*"
    ],
			"js": ["lib/jquery.min.js","content.js"]
		}
	],

	"permissions":[
	"webNavigation",
        
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "storage"
    ],

	"web_accessible_resources": [
        "page.html"
    ]
	
	
}